<h5 class="mt-5 mb-3">Сортиране</h5>
<div class="d-md-flex">
    <div class="form-check">
        <input onclick="sort('pricePerPiece')" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
        <label class="form-check-label me-2 mb-1" for="flexRadioDefault1">
            Цена на бройка
        </label>
    </div>
    <select id="selectPPP" class="form-select me-3" style="max-width: 12rem; transform: translateY(-15%);" aria-label="Default select">
        <option value="1" selected>В нарастващ ред</option>
        <option value="-1">В намаляващ ред</option>
    </select>
    <div class="form-check">
        <input onclick="sort('pricePerUnit')" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label me-2 mb-1" for="flexRadioDefault2">
            Цена на кашон/опаковка
        </label>
    </div>
    <select id="selectPPU" class="form-select" style="max-width: 12rem; transform: translateY(-15%);" aria-label="Default select">
        <option value="1" selected>В нарастващ ред</option>
        <option value="-1">В намаляващ ред</option>
    </select>
</div>
<hr class="pb-4">
<script>
    var params = new URLSearchParams(window.location.search)
    var sP = 'sortParam'
    var sT = 'sortType'
    var val
    if (window.location.href.indexOf("sortParam") > -1) {
        val = params.get(sP)
        if (val === 'pricePerPiece') {
            document.getElementById("flexRadioDefault1").checked = true;
            if (window.location.href.indexOf("sortType") > -1) {
                val = params.get(sT)
                document.getElementById("selectPPP").value = val;
            }
        } else if (val === 'pricePerUnit') {
            document.getElementById("flexRadioDefault2").checked = true;
            if (window.location.href.indexOf("sortType") > -1) {
                val = params.get(sT)
                document.getElementById("selectPPU").value = val;
            }
        }
    }
</script>