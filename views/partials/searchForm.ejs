<div class="form-row">
    <div class="form-item">
        <label>Наименование</label>
        <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
    <div class="form-item">
        <label>Описание на продукта</label>
        <textarea name="description"><%= searchOptions.description %></textarea>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Минимална цена на бройка (в лв.)</label>
        <input type="text" name="minPricePerPiece" value="<%= searchOptions.minPricePerPiece %>">
    </div>
    <div class="form-item">
        <label>Максимална цена на бройка (в лв.)</label>
        <input type="text" name="maxPricePerPiece" value="<%= searchOptions.maxPricePerPiece %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Минимална цена на кашон/опаковка (в лв.)</label>
        <input type="text" name="minPricePerUnit" value="<%= searchOptions.minPricePerUnit %>">
    </div>
    <div class="form-item">
        <label>Максимална цена на кашон/опаковка (в лв.)</label>
            <input type="text" name="maxPricePerUnit" value="<%= searchOptions.maxPricePerUnit %>">
    </div>
</div>
<br>
<input style="display: none;" type="text" name="allProducts" value="<%= searchOptions.allProducts %>">
<div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Търси</button>
</div>