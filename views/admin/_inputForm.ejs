<link href="https://unpkg.com/filepond@^4/dist/filepond.css" rel="stylesheet" />
<link href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet" />
<script defer src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
<script defer src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>
<script defer src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
<script defer src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>
<script defer src="/javascripts/fileUpload.js"></script>

<style>
.filepond--root {
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-size: var(--basic-text-size-1200px);
    margin-bottom: 0;
}
.filepond--panel-root {
    border: 1px solid var(--form-input-border-color);
    background-color: var(--form-input-background-color);
}
.filepond--drop-label {
    color: black;
    font-size: inherit;
}

@media only screen and (max-width: 992px) {
    .filepond--root {
        font-size: var(--basic-text-size-992px);
    }
}
@media only screen and (max-width: 768px) {
    .filepond--root {
        font-size: var(--basic-text-size-768px);
    }
}
@media only screen and (max-width: 576px) {
    .filepond--root {
        font-size: var(--basic-text-size-576px);
    }
}
</style>

<div class="form-row">
    <div class="form-item">
        <label>Наименование:</label>
        <input required type="text" name="title" value="<%= product.title %>">
    </div>
    <div class="form-item form-item-hidden">
        <label>null</label>
        <input>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Цена на бройка (в лв.):</label>
        <input required type="text" name="pricePerPiece" 
        pattern="^[\.0-9]*$" title="Моля, въведете числова стойност и използвайте точка за десетичния знак."
        value="<%= product.pricePerPiece %>">
    </div>
    <div class="form-item">
        <label>Грамаж на бройка (в гр.):</label>
        <input required type="text" name="weightPerPiece"
        pattern="^[\.0-9]*$" title="Моля, въведете числова стойност и използвайте точка за десетичния знак." 
        value="<%= product.weightPerPiece %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Цена на кашон/опаковка (в лв.):</label>
        <input required type="text" name="pricePerUnit" 
        pattern="^[\.0-9]*$" title="Моля, въведете числова стойност и използвайте точка за десетичния знак."
        value="<%= product.pricePerUnit %>">
    </div>
    <div class="form-item">
        <label>Бройки в кашон/опаковка:</label>
        <input required type="number" name="piecesPerUnit" min="1" value="<%= product.piecesPerUnit %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Снимка:</label>
        <input type="file" name="productImage" class="product-image filepond">
    </div>
    <div class="form-item">
        <label>Описание:</label>
        <textarea required name="description" placeholder="Категория, производител..."><%= product.description %></textarea>
    </div>
</div>