<div class="form-row">
    <div class="form-item">
        <label>Наименование:</label>
        <input type="text" name="title" value="<%= product.title %>">
    </div>
    <div class="form-item form-item-hidden">
        <label>null</label>
        <input>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Цена на бройка (в лв.):</label>
        <input type="text" name="pricePerPiece" value="<%= product.pricePerPiece %>">
    </div>
    <div class="form-item">
        <label>Грамаж на бройка (в гр.):</label>
        <input type="text" name="weightPerPiece" value="<%= product.weightPerPiece %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Цена на кашон/опаковка (в лв.):</label>
        <input type="text" name="pricePerUnit" value="<%= product.pricePerUnit %>">
    </div>
    <div class="form-item">
        <label>Бройки в кашон/опаковка:</label>
        <input type="number" name="piecesPerUnit" min="1" value="<%= product.piecesPerUnit %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Снимка:</label>
        <input type="file" name="productImage" class="filepond">
    </div>
    <div class="form-item">
        <label>Описание:</label>
        <textarea name="description"><%= product.description %></textarea>
    </div>
</div>