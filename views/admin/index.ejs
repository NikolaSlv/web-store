<a href="/admin/new" style="border: 1px solid black; border-radius: 3px;">Добави продукт</a>
<br><br>
<span style="font-weight: bold">Търсене на продукти</span>
<br>
<form action="/admin" method="GET">
    <div>
        <label>Наименование</label>
        <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
    <div>
        <label>Минимална цена на бройка</label>
        <input type="text" name="minPricePerPiece" value="<%= searchOptions.minPricePerPiece %>">
    </div>
    <div>
        <label>Максимална цена на бройка</label>
        <input type="text" name="maxPricePerPiece" value="<%= searchOptions.maxPricePerPiece %>">
    </div>
    <div>
        <label>Минимална цена на кашон/опаковка</label>
        <input type="text" name="minPricePerUnit" value="<%= searchOptions.minPricePerUnit %>">
    </div>
    <div>
        <label>Максимална цена на кашон/опаковка</label>
        <input type="text" name="maxPricePerUnit" value="<%= searchOptions.maxPricePerUnit %>">
    </div>
    <button type="submit">Търси</button>
</form>
<br>
<div>
    <% products.forEach(product => { %>
        <div><%= product.title %></div>
        <img height="150" width="100" src="<%= product.productImagePath %>">
    <% }) %>
</div>