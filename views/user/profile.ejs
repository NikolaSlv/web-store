<div class="text-center">
    <form action="/profile/update?_method=PUT" method="POST">
        <h5 class="mb-3">Вашият профил</h5>
        <div id="gr1" class="form-group mb-2">
            <label class="form-label" for="emailEdit">Имейл:</label>
            <div class="d-flex justify-content-center">
                <input required disabled name="email" class="form-control" style="max-width: 400px; text-align: center;" id="emailEdit" type="email" value="<%= user.email %>">
            </div>
        </div>
        <div id="gr2" class="form-group mb-2">
            <label class="form-label" for="nameEdit">Име:</label>
            <div class="d-flex justify-content-center">
                <input disabled name="name" class="form-control" style="max-width: 400px; text-align: center;" id="nameEdit" type="text" value="<%= user.name %>">
            </div>
        </div>
        <div id="gr3" class="form-group mb-2">
            <label class="form-label" for="businessNameEdit">Наименование на магазина/фирмата:</label>
            <div class="d-flex justify-content-center">
                <input required disabled name="businessName" class="form-control" style="max-width: 400px; text-align: center;" id="businessNameEdit" type="text" value="<%= user.businessName %>">
            </div>
        </div>
        <div id="gr4" class="form-group mb-2">
            <label class="form-label" for="addressEdit">Адрес за доставка:</label>
            <div class="d-flex justify-content-center">
                <input required disabled name="address" class="form-control" style="max-width: 400px; text-align: center;" id="addressEdit" type="text" value="<%= user.address %>">
            </div>
        </div>
        <div id="gr5" class="form-group mb-2">
            <label class="form-label" for="phoneEdit">Телефон:</label>
            <div class="d-flex justify-content-center">
                <input required disabled name="phone" class="form-control" style="max-width: 400px; text-align: center;" id="phoneEdit" type="tel" value="<%= user.phone %>"
                pattern="^\(?\+?[3]?[5]?[9]?\)?[-. ]?([0-9]{1})?[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?([0-9]{1})[-. ]?$"
                title="Моля, въведете валиден телефонен номер.">
            </div>
        </div>
        <div id="passwordEditGroup" class="form-group mb-2" style="display: none;">
            <label class="form-label" for="passwordID">Парола:</label>
            <div class="d-flex justify-content-center">
                <input name="password" class="form-control" style="max-width: 400px; text-align: center;" 
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                    title="Трябва да съдържа поне едно число, една главна буква, една малка буква и да е дълга поне 8 символа."
                    id="passwordID" type="password" value="">
                <a class="ms-2" style="transform: translateY(13%); color: inherit" onclick="showPass()">
                    <div id="eyeNoView">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                            <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                            <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
                        </svg>
                    </div>
                    <div id="eyeView" style="display: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                        </svg>
                    </div>
                </a>
            </div>
        </div>
        <div id="passwordEditGroupRepeat" class="form-group mb-2" style="display: none;">
            <label class="form-label" for="passwordIDRep">Повторете паролата:</label>
            <div class="d-flex justify-content-center">
                <input name="passwordRepeat" class="form-control" style="max-width: 400px; text-align: center;" 
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                    title="Трябва да съдържа поне едно число, една главна буква, една малка буква и да е дълга поне 8 символа."
                    id="passwordIDRep" type="password" value="">
                <a class="ms-2" style="transform: translateY(13%); color: inherit" onclick="showRepeatPass()">
                    <div id="eyeNoViewRep">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                            <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                            <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
                        </svg>
                    </div>
                    <div id="eyeViewRep" style="display: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                        </svg>
                    </div>
                </a>
            </div>
        </div>
        <input hidden type="text" id="updatePass" name="updatePass" value="no">
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary mt-3 me-2" id="enableEdit" type="button" onclick="enableUserEditing()">Редактиране</button>
            <button class="btn btn-primary mt-3" id="changePassword" type="button" onclick="changePass()">Промяна на паролата</button>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary mt-3 me-2" id="backToProfile" type="button" onclick="goBackToProfile()" style="display: none; text-align: center;">Върни се</button>
            <button class="btn btn-primary mt-3" id="saveEdit" type="submit" style="display: none; text-align: center;">Запази</button>
        </div>
    </form>
</div>